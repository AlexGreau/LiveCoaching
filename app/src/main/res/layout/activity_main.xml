<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_play"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/button_video"
                    android:text="Video"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/button_start"
                    android:text="Start"
                    android:drawablePadding="10dip"
                    android:drawableLeft="@drawable/ic_play_circle_outline_black_24dp"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/button_finish"
                    android:text="Finish"
                    android:drawableLeft="@drawable/ic_stop_black_24dp"
                    android:layout_toRightOf="@id/button_start"
                    android:drawablePadding="10dip"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/button_reset"
                    android:text="Reset"
                    android:drawableLeft="@drawable/ic_replay_black_24dp"
                    android:layout_toRightOf="@+id/button_finish"
                    android:drawablePadding="10dip"
                    />

            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/play_content"
        android:layout_below="@+id/toolbar_play"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testPlay"
            android:gravity="center"
            android:text="hello titi"
            />

        <com.example.livecoaching.RenderEngine.TacticPanel xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res/com.example.livecoaching.RenderEngine.TacticPanel"
            android:id="@+id/tacticPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="zeub" />

    </RelativeLayout>
    
</RelativeLayout>